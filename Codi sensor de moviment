# Projecte-Automatitzacio-Mascota
#Proves de codi (lectura sensor de moviment)

int pirPin = 14;
bool movimentAnterior = false;

void setup() {
  Serial.begin(115200);
  pinMode(pirPin, INPUT);
}

void loop() {
  bool moviment = digitalRead(pirPin);

  if (moviment && !movimentAnterior) {
    Serial.println("Inici de moviment");
  }

  if (!moviment && movimentAnterior) {
    Serial.println("Fi de moviment");
  }

  movimentAnterior = moviment;
  delay(200);
}
